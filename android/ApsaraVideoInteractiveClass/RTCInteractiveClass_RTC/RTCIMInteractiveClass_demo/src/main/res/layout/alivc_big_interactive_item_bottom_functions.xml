<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alivc_big_interactive_class_iv_bottom_function_icon"
        android:layout_width="@dimen/alivc_biginteractiveclass_width_imageview_48"
        android:layout_height="@dimen/alivc_biginteractiveclass_width_imageview_48"/>

    <TextView
        android:id="@+id/alivc_big_interactive_class_tv_bottom_function_name"
        android:layout_marginTop="@dimen/alivc_biginteractiveclass_matgin_8"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_12"
        android:textColor="@color/alivc_biginteractiveclass_color_text_white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
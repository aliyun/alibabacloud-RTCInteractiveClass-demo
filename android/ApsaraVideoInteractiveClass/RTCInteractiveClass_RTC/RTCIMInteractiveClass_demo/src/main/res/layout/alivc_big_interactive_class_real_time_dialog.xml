<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alivc_common_white">

    <TextView
        android:id="@+id/alivc_voicecall_tv_online_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="实时互动"
        android:textColor="#2F2F2F"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider_view1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#EDEDED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alivc_voicecall_tv_online_dialog_title" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/realtime_chat_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/alivc_send_msg_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_view1" />

    <EditText
        android:id="@+id/alivc_send_msg_et"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_margin="@dimen/alivc_biginteractiveclass_margin_16"
        android:background="@drawable/alivc_biginteractiveclass_bg_send_msg_et"
        android:gravity="left|center_vertical"
        android:hint="说点什么~"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

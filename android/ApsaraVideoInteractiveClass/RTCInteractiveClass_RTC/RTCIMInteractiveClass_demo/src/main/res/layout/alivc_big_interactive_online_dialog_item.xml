<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:gravity="left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/student_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/alivc_common_font_gray_333333"
        android:textSize="@dimen/alivc_common_font_12"
        tools:text="fjsdkfjsfjsjf" />

    <TextView
        android:id="@+id/alivc_big_interactive_class_dialog_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/alivc_biginteractiveclass_item_nomal_teacher_text_red_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="教师"
        android:textColor="#E80320"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_12"
        android:visibility="gone" />

    <TextView
        android:id="@+id/alivc_big_interactive_class_dialog_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/alivc_biginteractiveclass_item_nomal_teacher_text_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="自己"
        android:textColor="#365AFF"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_12"
        android:visibility="gone" />

</LinearLayout>
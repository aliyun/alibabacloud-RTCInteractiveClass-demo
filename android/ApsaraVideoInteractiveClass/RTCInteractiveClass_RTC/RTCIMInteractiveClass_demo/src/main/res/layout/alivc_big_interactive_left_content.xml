<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="162dp"
    android:layout_height="0dp"
    android:background="@color/alivc_common_bg_white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:showIn="@layout/alivc_im_big_interactive_class_activity_rtc_chat">

    <View
        android:layout_width="@dimen/alivc_common_line_1px"
        android:layout_height="0dp"
        android:background="@color/alivc_biginteractiveclass_color_full_screen_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/left_card_view"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/alivc_common_bg_white_f7f7f7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/alivc_biginteractiveclass_teacher_avatar_bg" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/alivc_big_interactive_class_camera_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/alivc_big_interactive_class_tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/alivc_biginteractiveclass_item_nomal_teacher_text_bg"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="教师"
                android:textColor="@color/alivc_biginteractiveclass_color_365AFF"
                android:textSize="@dimen/alivc_biginteractiveclass_size_text_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="left"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/alivc_big_interactive_class_iv_teacher_mutecamera">

                <TextView
                    android:id="@+id/alivc_big_interactive_class_tv_teacher_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/alivc_biginteractiveclass_item_nomal_student_text_bg"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/alivc_biginteractiveclass_color_text_333333"
                    android:textSize="@dimen/alivc_biginteractiveclass_size_text_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/alivc_big_interactive_class_iv_teacher_mutecamera"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/alivc_biginteractiveclass_mute_camera_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/alivc_big_interactive_class_iv_teacher_mutemic" />

            <ImageView
                android:id="@+id/alivc_big_interactive_class_iv_teacher_mutemic"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/alivc_biginteractiveclass_mute_mic_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alivc_big_interactive_class_rcy_student_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/alivc_common_margin_8"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_card_view" />
</android.support.constraint.ConstraintLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alivc_biginteractiveclass_width_tip_dialog_295"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/alivc_voicecall_iv_tip_dialog_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/alivc_biginteractiveclass_important_warn"
        android:layout_marginTop="@dimen/alivc_biginteractiveclass_margin_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/alivc_voicecall_tv_tip_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alivc_biginteractiveclass_margin_16"
        android:gravity="center"
        android:padding="@dimen/alivc_biginteractiveclass_margin_10"
        android:visibility="gone"
        android:text="@string/alirtc_audioliveroom_string_copy_success"
        android:textColor="@color/alivc_biginteractiveclass_color_text_black"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_17" />

    <TextView
        android:id="@+id/alivc_voicecall_tv_tip_dialog_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/alivc_biginteractiveclass_margin_6"
        android:gravity="center"
        android:padding="@dimen/alivc_biginteractiveclass_margin_10"
        android:textColor="@color/alivc_biginteractiveclass_color_des_gray"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_biginteractiveclass_line_1px"
        android:background="@color/alivc_biginteractiveclass_color_line" />

    <LinearLayout
        android:id="@+id/alivc_voicecall_ll_two_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_biginteractiveclass_height_btn_layout_50"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alivc_voicecall_btn_tip_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/alivc_biginteractiveclass_color_cancel_btn_gray"
            android:textSize="@dimen/alivc_biginteractiveclass_size_text_18" />

        <Button
            android:id="@+id/alivc_voicecall_btn_tip_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/alivc_biginteractiveclass_color_btn_enable_blue"
            android:textSize="@dimen/alivc_biginteractiveclass_size_text_18" />
    </LinearLayout>

    <Button
        android:id="@+id/alivc_common_dialog_tip_dialog_one_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_biginteractiveclass_height_btn_layout_50"
        android:background="@null"
        android:gravity="center"
        android:textColor="@color/alivc_biginteractiveclass_color_btn_enable_blue"
        android:textSize="@dimen/alivc_biginteractiveclass_size_text_18" />
</LinearLayout>
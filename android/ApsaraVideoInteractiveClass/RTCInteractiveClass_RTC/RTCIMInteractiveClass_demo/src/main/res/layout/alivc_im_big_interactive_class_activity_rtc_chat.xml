<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/alivc_big_interactive_class_rl_content_class_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/alivc_big_interactive_class_fl_Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/alivc_biginteractiveclass_class_not_begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/alivc_big_interactive_class_rcy_student_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/alivc_big_interactive_top_content" />

    <include layout="@layout/alivc_big_interactive_left_content" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/alivc_biginteractiveclass_bg_suspension"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/alivc_big_interactive_class_layout_student_mutemic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/alivc_big_interactive_class_layout_student_mutecamera"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/alivc_big_interactive_class_iv_student_mutemic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/alivc_biginteractiveclass_local_mute_mic_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="静音"
                android:layout_marginTop="2dp"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/alivc_big_interactive_class_layout_student_mutecamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/online_item_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alivc_big_interactive_class_layout_student_mutemic"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/alivc_big_interactive_class_iv_student_mutecamera"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/alivc_biginteractiveclass_local_mute_camera_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄像头"
                android:layout_marginTop="2dp"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/online_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/apply_call_item_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alivc_big_interactive_class_layout_student_mutecamera"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/alivc_biginteractiveclass_online" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线列表"
                android:layout_marginTop="2dp"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/apply_call_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/real_time_item_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/online_item_layout"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/apply_call_item_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/alivc_biginteractiveclass_self_apply_call_normal" />

            <TextView
                android:id="@+id/apply_call_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_biginteractive_apply_seat_str"
                android:layout_marginTop="2dp"

                android:textColor="@color/alivc_common_bg_white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/real_time_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply_call_item_layout"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/real_time_item_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/alivc_biginteractiveclass_real_time_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时互动"
                android:layout_marginTop="2dp"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="10sp" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>